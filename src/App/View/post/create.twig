<div class="form-group" id="divName">
    <label for="" class="col-sm-2 control-label">Title: </label>
    <div class="col-sm-10">
        <input name="title" value="{{ title is defined ? title|e : '' }}" type="text" class="form-control" id="idInputTitle" required=required>
    </div>
</div>

<div class="form-group" id="divPath">
    <label for="idPath" class="col-sm-2 control-label">Path:</label>
    <div class="col-sm-10">
        <input id="idPath" value="{{ path is defined ? path|e : '' }}" required=required name="path" type="text" class="form-control" required=required/>
    </div>
</div>

<div class="form-group" id="divBody">
    <label for="idBody" class="col-sm-2 control-label">Body:</label>
    <div class="col-sm-10">
        <textarea id="idBody" required=required name="body" type="text" class="form-control" required=required>
            {{ body is defined ? body|e : '' }}
        </textarea>
    </div>
</div>
